<%- include('header') %> 
    <div class="box" id="heading">
        <h1><%= listTitle %> List</h1>
    </div>

    <div class="box">
            <% for(var i=0; i<newitems.length; i++){ %>
                <form action="/delete" method="post">
                 <div class="item">
                    <input type="checkbox" name=deleteItem onchange="this.form.submit()" value="<%= newitems[i]._id %>">
                    <p><%= newitems[i].name %> </p>
                 </div>
                 <input type="hidden" name="listTitle" value="<%= listTitle %>">
                </form>
            <% } %>

            <form action="/" method="post">
                <input type="text" name="todoitem" placeholder="New Item" autocomplete="off">
                <button type="submit" name="list" value="<%= listTitle %>">+</button>
            </form>
    </div>

    <%- include('footer') %> 